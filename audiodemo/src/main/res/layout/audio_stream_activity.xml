<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/live_back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgv_userName"
        android:layout_width="@dimen/activity_audio_stream_user_image_width"
        android:layout_height="@dimen/activity_audio_stream_user_image_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_audio_stream_title_margin"
        android:layout_marginTop="@dimen/activity_audio_stream_title_top" />

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_audio_stream_user_image_width"
        android:layout_marginLeft="@dimen/activity_audio_stream_title_margin"
        android:layout_marginTop="@dimen/activity_audio_stream_title_top"
        android:layout_toRightOf="@id/imgv_userName"
        android:gravity="center"
        android:text="微微一笑漫天花"
        android:textColor="#ffffffff"
        android:textSize="@dimen/font_size_32px" />

    <ImageView
        android:id="@+id/imgv_close"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_audio_stream_user_image_width"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_audio_stream_title_margin"
        android:layout_marginTop="@dimen/activity_audio_stream_title_top"
        android:background="#00ffffff"
        android:gravity="center"
        android:src="@mipmap/close_stream" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgv_userName"
        android:layout_marginLeft="@dimen/activity_audio_stream_title_margin"
        android:layout_marginTop="@dimen/activity_audio_stream_time_top_margin"
        android:background="#00000000"
        android:drawableLeft="@mipmap/stream_ing_status"
        android:drawablePadding="12dp"
        android:text="@string/audio_stream_time"
        android:textColor="#ffffffff" />


    <ImageView
        android:id="@+id/imgv_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="12dp"
        android:background="#00000000"
        android:src="@mipmap/audio_connect" />

    <LinearLayout
        android:id="@+id/ll_fans"
        android:layout_width="@dimen/activity_audio_stream_list_width"
        android:layout_height="@dimen/activity_audio_stream_list_height"
        android:orientation="vertical"
        android:layout_above="@id/imgv_call"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="65dp"
        android:weightSum="3">

        <!--<include layout="@layout/audio_stream_user_list_item" android:visibility="gone"/>-->
        <!--<include layout="@layout/audio_stream_user_list_item" android:visibility="gone"/>-->
        <!--<include layout="@layout/audio_stream_user_list_item" android:visibility="gone"/>-->
    </LinearLayout>
</RelativeLayout>